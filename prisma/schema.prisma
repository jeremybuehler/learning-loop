generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Telemetry {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  source    String
  type      String
  payload   Json

  @@index([timestamp])
}

model Feedback {
  id       Int      @id @default(autoincrement())
  eventId  String
  label    String
  reviewer String?
  notes    String?
  ts       DateTime @default(now())

  @@index([ts])
}

model Score {
  id      Int      @id @default(autoincrement())
  eventId String
  metric  String
  value   Float
  ts      DateTime @default(now())

  @@index([metric, ts])
}
