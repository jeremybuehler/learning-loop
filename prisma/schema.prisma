generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Severity {
  OK
  WARN
  CRIT
}

enum Comparison {
  gt
  lt
}

model Telemetry {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  source    String
  type      String
  payload   Json

  @@index([timestamp])
}

model Feedback {
  id       Int      @id @default(autoincrement())
  eventId  String
  label    String
  reviewer String?
  notes    String?
  ts       DateTime @default(now())

  @@index([ts])
}

model Score {
  id      Int      @id @default(autoincrement())
  eventId String
  metric  String
  value   Float
  severity Severity @default(OK)
  ts      DateTime @default(now())

  @@index([metric, ts])
}

model EvaluationConfig {
  id             Int         @id @default(autoincrement())
  metric         String      @unique
  comparison     Comparison  @default(gt)
  warn           Float
  crit           Float
  windowSeconds  Int         @default(300)
  enabled        Boolean     @default(true)
  updatedAt      DateTime    @updatedAt
}
